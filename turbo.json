{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"GOOGLE_CLIENT_SECRET",
				"MP_ACCESS_TOKEN",
				"ANTHROPIC_API_KEY",
				"INPUT_TOKENS_PER_CREDIT",
				"OUTPUT_TOKENS_PER_CREDIT"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
